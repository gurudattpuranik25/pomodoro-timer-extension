{
  "name": "Pomodoro Timer",
  "manifest_version": 3,
  "version": "1.0.0",
  "description": "Increase your productivity using Pomodoro timer.",
  "icons": {
    "16": "wall-clock.png",
    "48": "wall-clock.png",
    "128": "wall-clock.png"
  },
  "action": {
    "default_title": "Pomodoro Timer",
    "default_popup": "popup/popup.html"
  },
  "permissions": ["storage", "alarms", "notifications"],
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options/options.html"
}
